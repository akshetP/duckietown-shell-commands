{
    "schema": {
        "lx_repo": {
            "title": "LX Repository",
            "description": "Which repository you would like to publish the LX to. This should be in the format `username/repository`.",
            "type": "string",
            "required": true
        },
        "lx_branch": {
            "title": "LX Branch",
            "description": "Which branch of the LX repository to use. This branch must currently exist in the repository.",
            "type": "string",
            "required": true
        },
        "recipe_repo": {
            "title": "Recipe Repository",
            "type": "string",
            "required": true
        },
        "recipe_branch": {
            "title": "Recipe Branch",
            "type": "string",
            "required": true
        },
        "solution_repo": {
            "title": "Solution Repository",
            "type": "string",
            "required": true
        },
        "solution_branch": {
            "title": "Solution Branch",
            "type": "string",
            "required": true
        },
        "update_defaults":
        {
            "type": "string",
            "title": "Would you like to save these publish locations as the defaults in this form?\n You may still edit the values any time you call `dts lx publish`.",
            "enum": [ "Yes", "No" ],
            "activeClass": "btn-success",
            "required": true
        },
        "version": {
            "title": "Version",
            "description": "Update notes for this published version",
            "type": "string",
            "minLength": 1,
            "maxLength": 24,
            "required": false
        }
    },
    "form": [
        "lx_repo",
        "lx_branch",
        "recipe_repo",
        "recipe_branch",
        "solution_repo",
        "solution_branch",
        {
            "key": "update_defaults",
            "type": "radiobuttons"
        },
        "version",
        {
            "type": "submit",
            "title": "Publish"
        }
    ],
    "value": {
        "update_defaults": "Yes"
    }
}